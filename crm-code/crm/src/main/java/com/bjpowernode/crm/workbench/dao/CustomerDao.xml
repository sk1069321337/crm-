<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.bjpowernode.crm.workbench.dao.CustomerDao">
    <insert id="save">
        insert into (
            id,
            owner,
            name,
            website,
            phone,
            createBy,
            createTime,
            contactSummary,
            nextContactTime,
            description,
            address
            birth
        )values (
            #{id},
            #{owner},
            #{name},
            #{website},
            #{phone},
            #{createBy},
            #{createTime},
            #{contactSummary},
            #{nextContactTime},
            #{description},
            #{address},
            #{birth}
        )
    </insert>
  	<select id="getbyCompany" resultType="com.bjpowernode.crm.workbench.domain.Customer">
        select * from tbl_customer where name=#{name}
    </select>
</mapper>

































